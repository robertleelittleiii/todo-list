<div class="m-block">
  <div align="center">
    <!-- START:flash -->
    <% if flash[:notice] -%>
      <div id="notice"><%= flash[:notice] %></div>
    <% end -%>
    <!-- END:flash -->
  </div>

  <div id="m-list">
    <h1  class="m-header">Todo</h1>

    <center><%= link_to 'New Todo', :action=>:create_empty_record,:typeofrecord=>"todo" %></center>

    <%  @todos.each do |todo| %>
      <div class="hr"></div>
      <table width ="100%"cellpadding="5" cellspacing="0">
        <tr class="list-table" valign="top" class="<%= cycle('list-line-odd', 'list-line-even') %>"  onclick = "window.location.href ='<%=url_for(:controller => 'todos', :id => todo.id,  :action => 'edit')%>' "  style = "cursor:pointer" >
                      <td align="left">
    <span class="list-title"><%= todo.name %></span>
          </td>
                   <td align="left">
    <span class="list-title"><%= todo.description %></span>
          </td>
                   <td align="left">
    <span class="list-title"><%= todo.priority %></span>
          </td>
                   <td align="left">
    <span class="list-title"><%= todo.completion_date %></span>
          </td>
                   <td align="left">
    <span class="list-title"><%= todo.completed %></span>
          </td>
          
        </tr>
      </table>
      <div align="right" class="image-delete-list" >
        <%=link_to image_tag("m-scaffold/Button-Delete.png", :border=>"0") , todo,:on_click=>"", :confirm => 'Are you sure?', :method => :delete %>
      </div>
    <% end %>
    <div class="hr"></div>

  </div>
    <center><%= link_to 'New Todo', :action=>:create_empty_record,:typeofrecord=>"todo" %></center>
</div>
